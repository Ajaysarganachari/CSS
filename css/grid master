                  <div
                    class="grid-container"
                    style="
                      display: grid;
                    grid-template-areas: 'header header header  header' 'section content content section' 'footer footer foter footer';
                     grid-template-rows: repeat(3,100px);
                      gap: 10px;
                    "
                  >
